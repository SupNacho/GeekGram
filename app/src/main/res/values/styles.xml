<resources>

     Base application theme.
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryGreen</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkGreen</item>
        <item name="colorAccent">@color/secondaryColor</item>

    </style>

    <style name="ButtonThemeOne" parent="Theme.AppCompat.CompactMenu">
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/primaryColorYB</item>
        <item name="android:background">@color/secondaryColorYB</item>
    </style>

    <!--Start of Lime Theme-->

    <style name="standard_AppStyle.Lime" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimaryGreen</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkGreen</item>
        <item name="colorAccent">@color/colorAccentGreen</item>
    </style>
    <style name="standard_AppBarLayoutStyle.Lime" parent="@style/Widget.Design.AppBarLayout">
        <item name="android:background">@color/colorPrimaryDarkGreen</item>
        <item name="android:textColor">@color/secondaryTextColor</item>
    </style>
    <style name="standard_ToolbarLayoutStyle.Lime" parent="@style/Widget.AppCompat.Toolbar">
        <item name="android:background">@color/colorPrimaryGreen</item>
        <item name="android:textColor">@color/secondaryTextColor</item>
    </style>
    <style name="standard_TextViewLayoutStyle.Lime" parent="@style/TextAppearance.AppCompat">
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>
    <style name="standard_fabStyle.Lime" parent="@style/Widget.Design.FloatingActionButton">
        <item name="backgroundTint">@color/colorAccentGreen</item>
    </style>
    <style name="standard_bottomNavigationStyle.Lime" parent="@style/Widget.Design.BottomNavigationView">
        <item name="itemIconTint">@drawable/bottom_nav_selector_lime</item>
        <item name="itemTextColor">@drawable/bottom_nav_selector_text_lime</item>
    </style>
    <style name="standard_navigationDrawerStyle.Lime" parent="@style/Widget.Design.NavigationView">
        <item name="itemIconTint">@color/colorPrimaryDarkGreen</item>
        <item name="itemTextColor">@color/colorPrimaryGreen</item>
    </style>
    <style name="standard_cardViewOneStyle.Lime" parent="@style/CardView">
        <item name="cardBackgroundColor">@color/colorPrimaryGreen</item>
    </style>
    <style name="standard_cardViewTwoStyle.Lime" parent="@style/CardView">
        <item name="cardBackgroundColor">@color/colorPrimaryDarkGreen</item>
    </style>

    <!--End of Lime Theme-->

    <!--Start of Green Berry Theme-->

    <style name="standard_AppStyle.GreenBerry" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/secondaryColor</item>
    </style>
    <style name="standard_AppBarLayoutStyle.GreenBerry" parent="@style/Widget.Design.AppBarLayout">
        <item name="android:background">@color/primaryDarkColor</item>
        <item name="android:textColor">@color/secondaryTextColor</item>
    </style>
    <style name="standard_ToolbarLayoutStyle.GreenBerry" parent="@style/Widget.AppCompat.Toolbar">
        <item name="android:background">@color/primaryDarkColor</item>
        <item name="android:textColor">@color/secondaryTextColor</item>
    </style>
    <style name="standard_TextViewLayoutStyle.GreenBerry" parent="@style/TextAppearance.AppCompat">
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>
    <style name="standard_fabStyle.GreenBerry" parent="@style/Widget.Design.FloatingActionButton">
        <item name="backgroundTint">@color/primaryColor</item>
    </style>
    <style name="standard_bottomNavigationStyle.GreenBerry" parent="@style/Widget.Design.BottomNavigationView">
        <item name="itemIconTint">@drawable/bottom_nav_selector_g_b</item>
        <item name="itemTextColor">@drawable/bottom_nav_selector_text_g_b</item>
    </style>
    <style name="standard_navigationDrawerStyle.GreenBerry" parent="@style/Widget.Design.NavigationView">
        <item name="itemIconTint">@drawable/bottom_nav_selector_g_b</item>
        <item name="itemTextColor">@drawable/bottom_nav_selector_text_g_b</item>
    </style>
    <style name="standard_cardViewOneStyle.GreenBerry" parent="@style/CardView">
        <item name="cardBackgroundColor">@color/primaryLightColor</item>
    </style>
    <style name="standard_cardViewTwoStyle.GreenBerry" parent="@style/CardView">
        <item name="cardBackgroundColor">@color/secondaryColor</item>
    </style>

    <!--End of Green Berry Theme-->

    <!--Start of Yellow Blue Theme-->

    <style name="standard_AppStyle.YellowBlue" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primaryLightColorYB</item>
        <item name="colorPrimaryDark">@color/primaryDarkColorYB</item>
        <item name="colorAccent">@color/secondaryColorYB</item>
    </style>
    <style name="standard_AppBarLayoutStyle.YellowBlue" parent="@style/Widget.Design.AppBarLayout">
        <item name="android:background">@color/primaryColorYB</item>
        <item name="android:textColor">@color/secondaryTextColorYB</item>
    </style>
    <style name="standard_ToolbarLayoutStyle.YellowBlue" parent="@style/Widget.AppCompat.Toolbar">
        <item name="android:background">@color/primaryDarkColorYB</item>
        <item name="android:textColor">@color/secondaryTextColorYB</item>
    </style>
    <style name="standard_TextViewLayoutStyle.YellowBlue" parent="@style/TextAppearance.AppCompat">
        <item name="android:textColor">@color/secondaryTextColorYB</item>
    </style>
    <style name="standard_fabStyle.YellowBlue" parent="@style/Widget.Design.FloatingActionButton">
        <item name="backgroundTint">@color/primaryColorYB</item>
    </style>
    <style name="standard_bottomNavigationStyle.YellowBlue" parent="@style/Widget.Design.BottomNavigationView">
        <item name="itemIconTint">@drawable/bottom_nav_selector_y_b</item>
        <item name="itemTextColor">@drawable/bottom_nav_selector_text_y_b</item>
    </style>
    <style name="standard_navigationDrawerStyle.YellowBlue" parent="@style/Widget.Design.NavigationView">
        <item name="itemIconTint">@drawable/bottom_nav_selector_y_b</item>
        <item name="itemTextColor">@drawable/bottom_nav_selector_text_y_b</item>
    </style>
    <style name="standard_cardViewOneStyle.YellowBlue" parent="@style/CardView">
        <item name="cardBackgroundColor">@color/primaryLightColorYB</item>
    </style>
    <style name="standard_cardViewTwoStyle.YellowBlue" parent="@style/CardView">
        <item name="cardBackgroundColor">@color/secondaryColorYB</item>
    </style>

    <!--End of Yellow Blue Theme-->

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="ButtonStyle_zero" parent="@style/Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_zero_background</item>
    </style>
    <style name="ButtonStyle_one" parent="@style/Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_one_background</item>
    </style>

    <style name="ButtonStyle_two" parent="@style/Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_two_background</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

</resources>
